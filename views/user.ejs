<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Table</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-800 p-6">
    <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-md p-6">
      <!-- Header with Title, Create User, and Logout Buttons -->
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold text-gray-800">User List</h2>
        <div class="flex items-center gap-4">
          <a
            href="/create"
            class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-xl text-sm"
          >
            + Create User
          </a>
          <a
            href="/logout" onclick="return confirm('Are you sure you want to logout?')"
            class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-xl text-sm"
          >
            Logout
          </a>
        </div>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">ID</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Name</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Email</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Gender</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Profession</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Action</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (user.length > 0) { %>
              <% user.forEach(function(user) { %>
                <tr>
                  <td class="px-6 py-4 text-sm text-gray-700"><%= user.id %></td>
                  <td class="px-6 py-4 text-sm text-gray-700"><%= user.name %></td>
                  <td class="px-6 py-4 text-sm text-gray-700"><%= user.email %></td>
                  <td class="px-6 py-4 text-sm text-gray-700"><%= user.gender %></td>
                  <td class="px-6 py-4 text-sm text-gray-700"><%= user.profession %></td>
                  <td class="px-6 py-4 text-sm text-gray-700">
                    <div class="flex gap-2">
                      <a
                        href="/edit/<%= user._id %>"
                        class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-sm"
                      >Edit</a>
                      <form
                        action="/delete/<%= user._id %>"
                        method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this user?');"
                      >
                        <button
                          type="submit"
                          class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md text-sm"
                        >Delete</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center px-6 py-4 text-sm text-gray-500">
                  No users found.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
